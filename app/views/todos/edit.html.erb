<%= form_with(url: "/lists/#{@list.id}/todos/#{@todo.id}", method: 'patch') do |f| %>
<div class="field">
    <%= f.label :task, "Task:" %><br>
    <%= f.text_field :task, value: @todo.task %><br>
    <%= f.label :notes, "Notes:" %><br>
    <%= f.text_area :notes, value: @todo.notes %>
</div>
<div class="actions">
    <%= f.submit "Update" %>
</div>
<% end %>